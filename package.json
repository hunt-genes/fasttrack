{
  "name": "fasttrack",
  "version": "0.3.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --require test/setup",
    "build": "npm run build:schema && npm run build:dist && npm run build:client",
    "build:dist": "babel src -d dist && cp -r config dist/ && cp package.json dist/",
    "build:client": "rm -rf dist/static && webpack --progress --colors --config webpack.production.config.js",
    "build:schema": "babel-node ./src/build-schema.js",
    "deploy": "ansible-playbook -i setup/inventory --ask-become-pass setup/deploy.yml",
    "dev": "babel-node ./node_modules/.bin/webpack-dev-server --progress --port 3001 --inline --hot",
    "dist": "rm -rf node_modules && rm -rf dist && mkdir dist && yarn install --production && cp -r node_modules dist/ && npm install --only=dev && npm run build",
    "lint": "eslint --ignore-pattern \"src/server/lib/middleware.js\" --ignore-pattern \"src/server/lib/util.js\" --ignore-pattern \"src/server/routes/*\" --ignore-pattern \"src/client/**/*.js\" src/client \"src/**/*.js\" || :",
    "start": "nodemon"
  },
  "author": "Sigurd Gartmann",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/hunt-genes/fasttrack.git"
  },
  "metadata": {
    "graphql": {
      "schema": "./src/schema.json"
    }
  },
  "dependencies": {
    "babel-core": "^6.21.0",
    "babel-register": "^6.3.13",
    "body-parser": "^1.15.0",
    "config": "^1.24.0",
    "express": "^4.13.3",
    "express-graphql": "^0.6.1",
    "fast-csv": "^1.0.0",
    "font-awesome": "^4.4.0",
    "graphql": "^0.8.2",
    "graphql-relay": "^0.4.3",
    "history": "^4.5.0",
    "immutable": "^3.7.5",
    "ip": "^1.1.0",
    "isomorphic-relay": "^0.7.1",
    "isomorphic-relay-router": "^0.8.1",
    "moment": "^2.11.0",
    "mongoose": "^4.3.4",
    "node-sass": "^4.1.1",
    "react": "^15.3.1",
    "react-bootstrap": "^0.30.3",
    "react-dom": "^15.3.1",
    "react-relay": "^0.10.0",
    "react-router": "^3.0.0",
    "react-router-bootstrap": "^0.23.1",
    "react-tap-event-plugin": "^2.0.1",
    "relay-local-schema": "^0.5.3",
    "relay-mongoose-connection": "^1.0.1",
    "serve-favicon": "^2.3.0"
  },
